<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    app:layoutDescription="@xml/activity_user_select_scene"
    tools:context=".Authentication.UserSelect">

    <ImageView
        android:id="@+id/midi"
        android:layout_width="261dp"
        android:layout_height="200dp"
        android:layout_marginTop="-10dp"
        android:background="@drawable/midi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/manage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/baloo"
        android:text="Manage >"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="261dp"
        android:layout_height="200dp"
        android:layout_marginEnd="-15dp"
        android:background="@drawable/veg2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/customerbtn"
        android:layout_width="280dp"
        android:layout_height="62dp"
        android:layout_marginTop="364dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/customerbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/retailerbtn"
        android:layout_width="280dp"
        android:layout_height="62dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/retailerbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customerbtn" />
</androidx.constraintlayout.widget.ConstraintLayout>