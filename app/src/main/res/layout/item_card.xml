<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@color/black"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_image_background"
            android:layout_width="134dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/catbg"
            android:foreground="#0C878787" />

        <ImageView
            android:id="@+id/add_to_fav"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="13dp"
            android:background="@drawable/addtofav" />

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="45dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/item_image_background"
            android:layout_marginTop="20dp"
            android:background="@drawable/bd1" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_image"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:text="Item Name"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_name"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:text="Quantity" />

        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_quantity"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:text="Price" />

        <ImageButton
            android:id="@+id/add_to_cart_button"
            android:layout_width="54dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/addbtn" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
