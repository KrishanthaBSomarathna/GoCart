<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/otpbg"
    tools:context=".Authentication.CustomerAuth.CustomerMobileAuth">

    <RelativeLayout
        android:id="@+id/sentOtp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="match_parent"
            android:layout_height="362dp"
            android:layout_centerInParent="true"
            android:background="@drawable/img_1" />

        <ImageButton
            android:id="@+id/sendOtpbtn"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/imageView13"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="75dp"
            android:background="@drawable/next" />

        <ImageButton
            android:id="@+id/cancelbtn"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/imageView13"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="75dp"
            android:background="@drawable/cancel" />

        <TextView
            android:id="@+id/phoneNumber1"
            android:layout_width="195dp"
            android:layout_height="44dp"
            android:layout_alignTop="@+id/imageView13"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="108dp"
            android:layout_marginTop="86dp"
            android:layout_marginEnd="108dp"
            android:fontFamily="@font/itim"
            android:gravity="center"
            android:text="(078) 7175 969"
            android:textSize="24dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/verifyOtp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView

            android:id="@+id/imageView16"
            android:layout_width="match_parent"
            android:layout_height="382dp"
            android:layout_centerInParent="true"
            android:background="@drawable/otpveri" />

        <TextView
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView16"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="43dp"
            android:layout_marginEnd="44dp"
            android:layout_marginBottom="256dp"
            android:fontFamily="@font/itim"
            android:text="A verification code has been sent to"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/phoneNumber2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView16"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="237dp"
            android:text="(078) 7175-969"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText8"
            android:layout_width="339dp"
            android:layout_height="48dp"
            android:layout_alignTop="@+id/imageView16"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"

            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="162dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/logbg"
            android:gravity="center" />

        <ImageView
            android:id="@+id/verifyButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/imageView16"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="49dp"
            android:layout_marginBottom="93dp"
            android:background="@drawable/verifybtn" />

        <TextView
            android:id="@+id/resendTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView16"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="58dp"
            android:fontFamily="@font/itim"
            android:text="Didnâ€™t receive the code? Resend (30)"
            android:textSize="20dp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
